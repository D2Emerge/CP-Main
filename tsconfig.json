{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["apps/*/src/**/*", "packages/*/src/**/*", "*.ts", "*.js"],
  "exclude": ["node_modules", "dist", ".next", "**/*.spec.ts", "**/*.test.ts"]
}
